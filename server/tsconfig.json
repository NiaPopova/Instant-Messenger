{
  "compilerOptions": {
    "target": "ES2020",               // Modern Node target
    "module": "CommonJS",             // Use CommonJS modules
    "rootDir": "src",                 // Source files live under src/
    "outDir": "dist",                 // Compiled output goes to dist/
    "strict": true,                   // Enable strict type checking
    "esModuleInterop": true,          // For default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],                 // Only compile files under src/
  "exclude": ["node_modules", "dist"]
}
